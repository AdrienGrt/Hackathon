{# templates/client/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <h1><b>Liste des clients de merde !</b></h1>

    <form method="get" action="{{ path('app_client_index') }}">
        <input type="text" name="search" placeholder="Rechercher un client" value="{{ app.request.query.get('search') }}">
        <button type="submit">Rechercher un nom</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Entreprise</th>
                <th>Factures</th>
                <th>Montant total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.nom }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.entreprise }}</td>
                    <td>{{ client.factures|length }}</td>  <!-- Nombre de factures -->
                    <td>{{ client.montantTotal }} €</td>  <!-- Montant total -->
                    <td>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}">Modifier</a>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}">Voir</a>
                        <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
