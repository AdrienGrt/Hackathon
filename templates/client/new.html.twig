{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau client{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center mb-4"><b>Créer un nouveau client</b></h1>

        <!-- Formulaire de création -->
        <div class="mt-4">
            {{ include('client/_form.html.twig') }}
        </div>

        <!-- Lien retour à la liste -->
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('app_client_index') }}" class="btn btn-secondary rounded-pill px-4 py-2">
                Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
