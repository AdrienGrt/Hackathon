    <div class="card shadow-lg p-4">
        <h1 class="text-center mb-4"><b>Modifier la Facture</b></h1>

        <!-- Formulaire de modification -->
        <div class="mb-4">
            {{ include('facture/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
